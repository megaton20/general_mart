          <div id="service-details" class="service-details section">
            <div class="card-body">
                <div class="service-box mb-4">
                    <div class="services-list">
                      <% allCategory.forEach(data => { %>
                      <a href="/user/category/<%= data.Category_name %>#product-section" class=" categoryButton" data-category="<%= data.Category_name %>">
                        <i class="bi bi-arrow-right-circle"></i><span> <%= data.Category_name %></span>
                      </a>
                     
                      <% }); %>
                    </div>
                  </div>
            </div>
          </div>
          <!-- Add more category cards as needed -->
        </div>
  
        <!-- Carousel (Turns into col-12 on mobile) -->
        <div class="col-12 col-md-8">
            <div id="carouselExample" class="carousel slide carousel-fade" data-bs-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="/landing-imgs/wwww.png" class="d-block w-100" alt="Slide 1">
                </div>
                <div class="carousel-item">
                  <img src="/landing-imgs/wwww.png" class="d-block w-100" alt="Slide 2">
                </div>
                <div class="carousel-item">
                  <img src="/landing-imgs/banner-2.png" class="d-block w-100" alt="Slide 3">
                </div>
                <div class="carousel-item">
                  <img src="/landing-imgs/banner.png" class="d-block w-100" alt="Slide 4">
                </div>
                <div class="carousel-item">
                  <img src="/landing-imgs/vvvvv.png" class="d-block w-100" alt="Slide 5">
                </div>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
        </div>
      </div>


  <div class="container">

   <!-- Part 1: Products -->
   <% if (firstHalf && firstHalf.length > 0) { %>
    <% firstHalf.forEach(category => { %>
        <% if (category.products && category.products.length > 0) { %> <!-- Only render card if products are present -->
            <div class="category-card card my-box-shadow">
                <div class="top-cat">
                    <h3><%= category.categoryName %></h3>
                    <a href="/user/category/<%= category.categoryName %>#product-section" >See all</a>
                </div>

                <div class="scroll-items">
                  <div class="products-grid my-box-shadow">
                    <% category.products.forEach(product => { %>
                        <div class="landing-item my-box-shadow" style="height: 250px; margin-bottom: 20px;">
                            <a href="/user/product-details/<%= product.id %>" class="home-card">
                                
                              <div class="landing-image">
                                <img src="/uploads/<%= product.image %>" alt="<%= product.ProductName %>">
                              </div>

                              <div class="landing-details">
                                <p class="text-truncate"><%= product.ProductName %></p> 
                              </div>
                              <div class="item-prices"><p>₦ <%= product.UnitPrice %></p> <p class="old-price text-grey">₦ <%= product.old_price %></p></div>
                            </a>
                        </div>
                    <% }) %>
                </div>
                </div>
            </div>
        <% } %> <!-- End of condition to render only if products exist -->
    <% }) %>
<% } %>

    <!-- Advertisement or other content -->
    <div class="advertisement">
        <p>Advertisement Area</p>
    </div>


