<style>
  /* Grid container for wishlist items */
  .wishlist-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 15px;
  }

  /* Card styling */
  .wishlist-card {
    background-color: #f8f9fa;
    padding: 10px;
    border-radius: 8px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease;
    height: 220px;
    /* Uniform height for all cards */
  }

  /* Card hover effect */
  .wishlist-card:hover {
    transform: scale(1.03);
  }

  /* Inner content to center image and text */
  .wishlist-card-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 100%;
    overflow: hidden;
  }

  /* Image styling */
  .wishlist-card-img img {
    width: 80px;
    height: auto;
    border-radius: 6px;
    margin-bottom: 10px;
  }

  /* Product name link styling */
  .wishlist-product-name {
    font-size: 1em;
    font-weight: bold;
    color: #333;
    text-decoration: none;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100px;
    /* Limit width to keep cards uniform */
  }

  /* Remove button styling */
  .wishlist-remove-btn {
    color: #dc3545;
    font-size: 0.9em;
    text-decoration: none;
    margin-top: 8px;
  }
</style>


<%- include('./partials/navbar') %>

<main class="main">
  <div class="container">
    <%- include('../partials/messages') %>


      <a class="back-btn" href="/user/profile"><i class="bi bi-arrow-left-circle"></i> Back</a>

      <!-- Wishlist Items in Card Layout -->
      <div class="wishlist-grid mt-4">
        <% wishlist.forEach(function(data) { %>
          <div class="wishlist-card">
            <div class="wishlist-card-content">
              <div class="wishlist-card-img">
                <a href="/user/product-details/<%= data.id %>" class="wishlist-product-name">
                  <img src="/uploads/<%= data.image %>" alt="<%= data.ProductName %> image">
                </a>
              </div>
              <a href="/user/product-details/<%= data.id %>" class="wishlist-product-name">
                <%= data.ProductName %>
              </a>
              <a href="/user/wishlist/<%= data.id %>/remove" class="wishlist-remove-btn">
                <i class="fas fa-trash"></i> Remove
              </a>
            </div>
          </div>
          <% }) %>
      </div>
  </div>

  
    <br>
    <br>


  <%- include('../partials/recentlyViewed') %>
  <!-- CSS for Wishlist Card Layout -->



</main>
  <!-- End of Content Wrapper -->

