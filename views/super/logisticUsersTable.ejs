

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include ('../partials/superSidebar') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

                <%- include ('../partials/topbar') %>
                <!-- End of Topbar -->
                <%- include ('../partials/messages') %>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 mt-2 text-gray-800">Logistics Drivers & Shifts   </h1>


                    <!-- DataTales Example -->
                    <div class=" mb-4">
                        <% if(logisticsResults.length <= 0){ %>

                                <h1>No Logistics Drivers Record Found !</h1>  

                            <% } else{ %>  
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>

                                                  <th> Name</th>
                                                  <th>Company name</th>
                                                  <th>Actions</th>
                                                </tr>
                                            </thead>
                                        
                                            <tbody>
                                          
        
                                                <% logisticsResults.forEach(function(data) {%>
        
                                                    <tr>
                                                        <td><%= data['First_name'] %> <%= data['Last_name'] %> </td>
                                                        <td><%= data['logistic_id'] %></td>
                                                        <td><%= data['logistics_company_name'] %></td>


                                                        <td>
                                                            <a class="btn btn-secondary" href="/super/asign-driver-to-company/<%= data['id'] %>"> edit</a>
                                                        </td>
                                                   </tr> 
                                                   
                                                       <% }) %>
                                       
                                         
                                           
                                            
        
                                                </tbody>
                                        </table>
                                    </div>

                                <% } %>
                        
                    </div>

                </div>

            <%- include ('../partials/footer') %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

