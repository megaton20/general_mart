

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include ('../partials/superSidebar') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include ('../partials/topbar') %>
                <!-- End of Topbar -->
                <%- include ('../partials/messages') %>

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <p class="mb-4">This table shows all registered Customers in all branches </p>

                    <!-- DataTales Example -->
                    <div class=" mb-4">
                        <%- include ('../partials/messages') %>
                        <% if(allUsers.length <= 0){ %>
                                <h1>No Employee Record Found !</h1>  

                          <% } else{ %>  
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>id</th>
                                                <th>Name</th>
                                                <th>email</th>
                                                <th>phone</th>
                                                <th>Last login</th>
                                                <th>Position</th>
                                                <th>store_name</th>
                                                <th>gender</th>
                                                <th>actions</th>
    
                                            </tr>
                                        </thead>
                                       
                                        <tbody>
    
                                            <% allUsers.forEach(function(data) {%>
                                             <tr>
                                                 <td><%= data['id'] %></td>
                                                 <td><%= data['First_name'] %> <%= data['Last_name'] %></td>
                                                 <td><%= data['email'] %></td>
                                                 <td><%= data['Phone'] %></td>
                                                 <td><%= data['previous_visit'] %></td>
                                                 <td><%= data['position'] %></td>
                                                 <td><%= data['store_name'] %></td>
                                                 <td><%= data['gender'] %></td>


                                                 <td style="display: flex; justify-content: space-between;">
                                                    <a class="btn btn-secondary mr-2" href="/super/edit-employee/<%= data['id'] %>"> edit</a>
                                                    <form action="/super/delete-employee/<%= data['id'] %>" method="POST" style="display: inline;">
                                                        <input type="hidden" name="_method" value="DELETE" />
                                                        <button  class="btn btn-danger"><i  class="fa  fa-bin"></i>Fire</button>
                                                    </form> 
                                                </td>
                                           
                                            </tr> 
                                            
                                                <% }) %>
                                      
    
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                          <% } %>
                        
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include ('../partials/footer') %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

