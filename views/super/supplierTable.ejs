

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include ('../partials/superSidebar') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include ('../partials/topbar') %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Suppliers</h1>
                    <a class="btn btn-outline-primary mr-2 mb-1" href="/super/create-supplier">Add Supplier</a>

                    <!-- DataTales Example -->
                    <div class=" mb-4">
                        <%- include ('../partials/messages') %>
                        <div class="card-body">


                            <% if(allSuppliers.length <= 0){ %>
                                <div class="card-body">
                                    
                                    <h1>No Sales Record Found !</h1>  
                                </div> 
                                <% } else{ %>  


                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                  <th>Id</th>
                                                  <th>Name </th>
                                                  <th>Business Name</th>
                                                  <th>Phone </th>
                                                  <th>Email </th>
                                                  <th>Address</th>
                                                  <th>Date Added</th>
                                                  <th>Actions</th>
                                                </tr>
                                            </thead>
                                        
                                            <tbody>
                                          
                                                <% allSuppliers.forEach(function(data) {%>
        
                                                    <tr>
                                                        <td><%= data['id'] %></td>
                                                        <td><%= data['First_name'] %>  <%= data['Last_name'] %> </td>
                                                        <td><%= data['Business_name'] %></td>

                                                        <td><%= data['Phone'] %></td>
                                                        <td><%= data['email'] %></td>
                                                        <td><%= data['Address'] %></td>
                                                        <td><%= data['created_date'] %></td>
                                                        <td>
                                                            <a class="btn btn-secondary" href="/super/edit-supplier/<%= data['id'] %>"> edit</a>
                                                            <form action="/super/delete-supplier/<%= data['id'] %>" method="POST" style="display: inline;">
                                                                <input type="hidden" name="_method" value="DELETE" />
                                                                <button  class="btn btn-danger">Delete</button>
                                                            </form>
                                                        </td>
                                                  
                                                   </tr> 
                                                   
                                                       <% }) %>
        
                                       
                                         
                                           
                                            
        
                                                </tbody>
                                        </table>
                                    </div>

                                    <% } %>
                        
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include ('../partials/footer') %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
