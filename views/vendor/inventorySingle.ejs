


    <!-- Page Wrapper -->
    <div id="wrapper">

      
        <!-- Sidebar -->
        <%- include ('../partials/superSidebar') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                 <!-- Topbar -->
                 <%- include ('../partials/topbar') %>
                 <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">


                        <%- include ('../partials/messages') %>

                                 <!-- Content Row -->
                            <p>inventory Preview</p>

                                <div class="row">

                                    <!-- Area Chart -->
                                    <div class="col-xl-8 col-lg-7">
                                        <div class=" mb-4">
                                            <!-- Card Header - Dropdown -->
                                 
                                            <!-- Card Body -->
                                            <div class="card-body">

                                                <div class="row">
                                                    <div class="col-6">Product Name: </div>
                                                    <div class="col-6"><%= allInventory[0].Product_name %></div>
                                                    <div class="col-6">Brand  Name: </div>
                                                    <div class="col-6"> <%= allInventory[0].Brand_name %></div>
                                                    <div class="col-6">Category: </div>
                                                    <div class="col-6"> <%= allInventory[0].Category_name %></div>
                                                    <div class="col-6">Purchase: </div>
                                                    <div class="col-6"> <%= allInventory[0].Purchase_price %></div>
                                                    <div class="col-6">QTY: </div>
                                                    <div class="col-6"> <%= allInventory[0].QTY_recieved %></div>
                                                    <div class="col-6">Total in Pack: </div>
                                                    <div class="col-6"> <%= allInventory[0].total_in_pack %></div>


                                                    <div class="col-6">Reciever Name: </div>
                                                    <div class="col-6"> <%= allInventory[0].Reciever_name %></div>
                                                    <div class="col-6">Supplier Name: </div>
                                                    <div class="col-6"> <%= allInventory[0].Supplier_name %></div>
                                                    <div class="col-6">Date Recieved: </div>
                                                    <div class="col-6"> <%= allInventory[0].created_date %></div>
                                                    <div class="col-6">Delivery Method: </div>
                                                    <div class="col-6"> <%= allInventory[0].Delivery_method %></div>
                                                    <div class="col-6">Cost of Delivery: </div>
                                                    <div class="col-6"> <%= allInventory[0].Cost_of_delivery %></div>
                                                    <div class="col-6">Barcode information: </div>
                                                    <div class="col-6"> <%= allInventory[0].barcode %></div>

                                                    <div class="col-6">Manufacture Date: </div>
                                                    <div class="col-6"> <%= allInventory[0].Manufacture_date %></div>
                                                    <div class="col-6">EXP Date: </div>
                                                    <div class="col-6"> <%= allInventory[0].Expire_date %></div>
                                                </div>

                                                <div class="row mt-4">
                                                    <div class="col-6">Total Damage from deleivery: </div>
                                                    <div class="col-6"><%= allInventory[0].Total_damaged %></div>
                                                    <div class="col-6">Store Presence: </div>
                                                    <div class="col-6"><%= allInventory[0].activate %></div>
                                                </div>


                                            </div>
                                        </div>
                                    </div>
            
                                    <!-- Pie Chart -->
                                    <div class="col-xl-4 col-lg-5">
                                        <div class="card shadow mb-4">
                                            <!-- Card Header - Dropdown -->

                                            <!-- Card Body -->


                                                  
                                                    <div class="card-body">
                                                        

                                    <img class="img-thumbnail" src="/uploads/<%= allInventory[0].image %>" alt="image">


                                    <% if ( allInventory[0].image == null ) { %>
                                        <form class="user" action="/super/add-image/<%= allInventory[0].id %>" method="post" enctype="multipart/form-data">

                                            <div class="form-group">
                                                <input type="file" name="image">
                                            </div>
                                            
                                            <input type="submit" value="Upload image"  class="btn btn-primary btn-user btn-block">
                                                

                                    
                                        </form>
                                      <% } else { %>
                                        <form class="user" action="/super/add-image/<%= allInventory[0].id %>" method="post" enctype="multipart/form-data">

                                            <div class="form-group">
                                                <input type="file" name="image">
                                            </div>
                                            
                                            <input type="submit" value="Upload image"  class="btn btn-primary btn-user btn-block">
                                                

                                    
                                        </form>
                                        
                                        <!-- HTML to render if the condition is false -->
                                      <% } %>


                                        


                                                    </div>


                                        </div>
                                    </div>
                                </div>

                             


                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

              <!-- Footer -->
              <%- include ('../partials/footer') %>
              <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
