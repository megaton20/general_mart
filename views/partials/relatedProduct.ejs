
<div class="container-for-large-screens">
    <% if (relatedProducts && relatedProducts.length> 0) { %>
      <div class="top-cat">
        <p>Customers also viewed</p>

      </div>

      <div class="scroll-items">
        <div class="products-grid ">
          <% relatedProducts.forEach(item => { %>
            <% if (userData.is_exclusive || !item.is_exclusive) { %> <!-- Skip exclusive items for non-exclusive users -->
              <div class="landing-item my-box-shadow" style="height: 200px; margin-bottom: 20px;">
                <a href="/user/product-details/<%= item.id %>" class="home-card">
                  <div class="landing-image">
                    <img src="/uploads/<%= item.image %>" alt="<%= item.ProductName %>">
                  </div>
                  <div class="landing-details">
                    <p class="text-truncate">
                      <%= item.ProductName %>
                    </p>
                  </div>
                </a>
              </div>
            <% } %>
          <% }) %>
          
        </div>
      </div>
      <% } else { %>

        <% } %>
  </div>