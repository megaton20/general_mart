    <style>
      /* Loader Styles */
      #loader {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 255, 255, 0.9);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
      }
    
      .loader-wrapper {
        position: relative;
        width: 150px;
        height: 150px;
      }
    
      .loader-logo {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 80px;
        z-index: 2;
        animation: bounce 1s ease infinite;
      }
    

    
      /* Bouncing Animation */
      @keyframes bounce {
        0%, 100% {
          transform: translate(-50%, -50%) scale(1);
        }
        50% {
          transform: translate(-50%, -60%) scale(1.1); /* Moves up and grows slightly */
        }
      }
    
      /* Hide page content initially */
      #page-content {
        visibility: hidden;
      }
    </style>
    
